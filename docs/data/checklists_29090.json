        },
        {
          "id": "legal",
          "title": "Sustento legal del predio",
          "items": [
            {
              "id": "C-TIT",
              "text": "Título/posesión y documentos de representación, de ser el caso.",
              "required": true
            }
          ]
        },
        {
          "id": "tecnico",
          "title": "Expediente técnico completo (multidisciplinario)",
          "items": [
            {
              "id": "C-ARQ",
              "text": "Arquitectura completa (planos + memoria).",
              "required": true
            },
            {
              "id": "C-EST",
              "text": "Estructuras (planos + memoria/cálculo cuando aplique).",
              "required": true
            },
            {
              "id": "C-IES",
              "text": "Instalaciones sanitarias y eléctricas (planos + memorias) cuando aplique.",
              "required": false,
              "when": {
                "any": [
                  {
                    "field": "tipo_intervencion",
                    "op": "in",
                    "value": [
                      "obra_nueva",
                      "ampliacion",
                      "remodelacion"
                    ]
                  }
                ]
              }
            },
            {
              "id": "C-SSOMA",
              "text": "Condiciones de seguridad y accesibilidad (según uso y RNE).",
              "required": true
            }
          ]
        },
        {
          "id": "compat",
          "title": "Compatibilidades/sectoriales (si aplica)",
          "items": [
            {
              "id": "C-PATR",
              "text": "Compatibilidad/gestión con Cultura (si patrimonio o colindancia sensible).",
              "required": false,
              "when": {
                "any": [
                  {
                    "field": "es_patrimonio_cultural",
                    "op": "eq",
                    "value": true
                  },
                  {
                    "field": "colinda_con_zona_arqueologica_patrimonio_anp",
                    "op": "eq",
                    "value": true
                  }
                ]
              }
            },
            {
              "id": "C-ITSE",
              "text": "Requisitos asociados a ITSE/defensa civil según giro/aforo/riesgo (puede condicionar el diseño).",
              "required": false
            }
          ]
        },
        {
          "id": "revision",
          "title": "Revisión previa",
          "items": [
            {
              "id": "C-COMT",
              "text": "Evaluación previa por Comisión Técnica o Revisores Urbanos (según corresponda).",
              "required": true
            }
          ]
        },
        {
          "id": "pagos",
          "title": "Pagos",
          "items": [
            {
              "id": "C-PAGO",
              "text": "Pago por derecho de trámite y revisión (si aplica).",
              "required": true
            }
          ]
        }
